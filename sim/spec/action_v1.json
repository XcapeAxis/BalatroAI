{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sim/spec/action_v1.json",
  "title": "Action v1",
  "type": "object",
  "required": ["schema_version", "phase", "action_type"],
  "properties": {
    "schema_version": {"const": "action_v1"},
    "phase": {"type": "string"},
    "action_type": {
      "type": "string",
      "enum": ["PLAY", "DISCARD", "SELECT", "CASH_OUT", "NEXT_ROUND", "START", "WAIT", "MENU", "SKIP", "REROLL"]
    },
    "indices": {
      "type": "array",
      "items": {"type": "integer", "minimum": 0},
      "maxItems": 5,
      "uniqueItems": true
    },
    "index": {"type": "integer", "minimum": 0},
    "seed": {"type": "string"},
    "params": {"type": "object"}
  }
}
